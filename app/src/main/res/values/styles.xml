<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!-- To change the popup menu and app text color  -->
        <item name="android:textColor">@color/textDefault</item>

        <!-- To change the background of options menu -->
        <item name="android:itemBackground">@color/menuBG</item>

        <!-- To change the background of status bar -->
        <item name="android:statusBarColor">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.DayNight">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!-- To change the app font -->
        <item name="android:fontFamily">@font/app_tf</item>
    </style>

    <style name="dialogCustomStyle" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:background">@color/menuBG</item>
    </style>

    <style name="CustomBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/dark</item>
    </style>

    <style name="SwitchStyle" parent="Theme.AppCompat.Light">
        <item name="android:colorForeground">#FFFFFF</item>
    </style>

    <style name="CustomBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/CustomBottomSheetStyle</item>
    </style>

    <style name="ConfigItemDivider">
        <item name="android:layout_height">@dimen/config_actions_icon_divider</item>
        <item name="android:layout_width">1dp</item>
        <item name="android:background">@color/dark</item>
    </style>
</resources>
