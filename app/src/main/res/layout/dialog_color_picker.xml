<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/dark"
    tools:context=".ui.components.ColorPicker">

    <View
        android:id="@+id/color_view"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:elevation="2dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/controls_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/colorpicker_activity_horizontal_margin"
        android:paddingRight="@dimen/colorpicker_activity_horizontal_margin"
        android:paddingBottom="@dimen/colorpicker_activity_vertical_margin">

        <com.ramotion.fluidslider.FluidSlider
            android:id="@+id/red_seek_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:bar_color="@color/colorpicker_red"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:size="small"
            app:text_size="@dimen/colorpicker_seekbar_text"/>

        <com.ramotion.fluidslider.FluidSlider
            android:id="@+id/green_seek_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:bar_color="@color/colorpicker_green"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/red_seek_bar"
            app:size="small" />

        <com.ramotion.fluidslider.FluidSlider
            android:id="@+id/blue_seek_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:bar_color="@color/colorpicker_blue"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/green_seek_bar"
            app:size="small" />

        <TextView
            android:id="@+id/hash_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/hex_code"
            android:layout_alignEnd="@+id/hex_code"
            android:layout_alignParentStart="true"
            android:layout_marginTop="32dp"
            android:labelFor="@id/hex_code"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:text="@string/materialcolorpicker__hash"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/blue_seek_bar" />

        <EditText
            android:id="@+id/hex_code"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/blue_seek_bar"
            android:layout_alignParentStart="false"
            android:layout_alignParentBottom="false"
            android:imeOptions="actionDone|actionGo|actionSend"
            android:importantForAutofill="no"
            android:inputType="textCapCharacters|textNoSuggestions"
            android:lines="1"
            android:maxLength="6"
            android:maxLines="1"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/primary_text_light"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@id/hash_text"
            app:layout_constraintTop_toTopOf="@+id/hash_text"
            tools:text="123456" />

        <Button
            android:id="@+id/select_color_button"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_alignBaseline="@+id/hex_code"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="false"
            android:backgroundTint="@color/colorTeal"
            android:text="@string/materialcolorpicker__btnSelectColor"
            android:textColor="@color/textDark"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/hash_text" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>
